<!-- Plugin Configuration File: https://plugins.jetbrains.com/docs/intellij/plugin-configuration-file.html -->
<idea-plugin>
    <!-- Unique identifier of the plugin. It should be FQN, cannot be changed between the plugin versions. -->
    <id>net.villagerzock.ERDPlugin</id>

    <!-- Public plugin name should be written in Title Case.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-name -->
    <name>ERD Diagrams</name>

    <!-- A displayed Vendor name or Organization ID displayed on the Plugins Page. -->
    <vendor>Villagerzock</vendor>

    <!-- Description of the plugin displayed on the Plugin Page and IDE Plugin Manager.
         Guidelines: https://plugins.jetbrains.com/docs/marketplace/best-practices-for-listing.html#plugin-description -->
    <description><![CDATA[
        Allows you to View and Edit ERD Diagrams for Databases and also reverse Engineer Databases
    ]]></description>

    <!-- Product and plugin compatibility requirements.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-compatibility.html -->
    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.database</depends>
    <!-- Extensions defined by the plugin.
         Read more: https://plugins.jetbrains.com/docs/intellij/plugin-extension-points.html -->
    <extensions defaultExtensionNs="com.intellij">
        <virtualFileSystem
                implementationClass="net.villagerzock.erdplugin.LightVirtualFile$LightVirtualFileSystem"
                physical="false"
                key="erd"
            />
        <toolWindow
                factoryClass="net.villagerzock.erdplugin.toolWindow.ERDToolWindow"
                id="ERD Table Editor"
                anchor="bottom"
                icon="DatabaseIcons.ToolwindowDatabaseChanges"
        />

        <fileType
            name="ERD"
            implementationClass="net.villagerzock.erdplugin.fileTypes.ErdFileType"
            extensions="erd"
            fieldName="INSTANCE"
        />

        <fileEditorProvider implementation="net.villagerzock.erdplugin.fileTypes.ErdFileEditorProvider"/>
    </extensions>

    <actions>
        <action id="net.villagerzock.erdplugin.db.ReverseEngineDatabase"
                class="net.villagerzock.erdplugin.db.ReverseEngineDatabase"
                text="Reverse Engineer"
                icon="AllIcons.Actions.Rebuild">
            <add-to-group group-id="DatabaseViewPopupMenu" anchor="after" relative-to-action="DatabaseView.Refresh"/>
        </action>
        <action
                id="net.villagerzock.erdplugin.fileTypes.CreateNewErdFile"
                class="net.villagerzock.erdplugin.fileTypes.CreateNewErdFile"
                text="ERD Diagram"
                icon="DatabaseIcons.ToolWindowDatabase"
                >
            <add-to-group group-id="NewGroup" anchor="after" relative-to-action="NewFile"/>
        </action>
    </actions>
</idea-plugin>